<Window x:Class="DefectListWpfControl.DefectList.Views.AddRootItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DefectListWpfControl.DefectList.Views"
        mc:Ignorable="d"
        Title="Добавить ремонтное изделие" Height="240" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Добавить ремонтное изделие" Style="{StaticResource PageHeader}" />

        <Grid Grid.Row="1" Margin="0 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Изделие" VerticalAlignment="Center" />
            <TextBox Grid.Row="0" Grid.Column="1" Margin="5 5" Text="{Binding Product.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="False" Style="{StaticResource PrimaryTextBox}"/>
            <Button Grid.Row="0" Grid.Column="2" Content="..." Style="{StaticResource SecondaryButton}" Command="{Binding ChoiceRootItemCommand}" />

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Изделие исходное" VerticalAlignment="Center"
                       ToolTip="Исходное изделие без Р, Р2, Р5 и прочих добавочных символов. Например, АП18Д.00.000"/>
            <TextBox Grid.Row="1" Grid.Column="1" Margin="5 5" Text="{Binding ProductInitial.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="False" Style="{StaticResource PrimaryTextBox}" />
            <Button Grid.Row="1" Grid.Column="2" Content="..." Style="{StaticResource SecondaryButton}" Command="{Binding ChoiceRootItemInitialCommand}" />
        </Grid>

        <Button Grid.Row="2" Style="{StaticResource PrimaryButton}" Content="Сохранить" Command="{Binding AddRootItemCommand}" IsEnabled="{Binding CanSubmit}" />

        <TextBlock Grid.Row="3" Text="{Binding ErrorMessage}" Style="{StaticResource ErrorMessage}" />
    </Grid>
</Window>
