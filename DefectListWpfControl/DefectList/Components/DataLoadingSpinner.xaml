<UserControl x:Class="DefectListWpfControl.DefectList.Components.DataLoadingSpinner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DefectListWpfControl.DefectList.Components"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <fa:ImageAwesome Style="{StaticResource DataLoadingSpinner}" />
        <TextBlock Text="{Binding}"
                   Style="{StaticResource DataLoadingText}" />
    </StackPanel>
</UserControl>
