<UserControl x:Class="DefectListWpfControl.DefectList.Components.BomItemsFilterByDetalTypComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DefectListWpfControl.DefectList.Components"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width = "Auto"/>
            <ColumnDefinition Width = "*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Content="Фильтр по типу ДСЕ" VerticalAlignment="Center" />
        <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Top" Margin="10 0 0 0">
            <Border BorderBrush="#ccc"
                BorderThickness="1"
                CornerRadius="5"
                Padding="5"
                SnapsToDevicePixels="True">
                <ListBox ItemsSource="{Binding DetalTypes}"
                     SelectionMode="Single"
                     FontSize="14"
                     BorderThickness="0"
                     HorizontalContentAlignment="Stretch">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <RadioButton
                                Grid.Column="0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                GroupName="FilterModesGroup"
                                Cursor="Hand"/>
                                <TextBlock Grid.Column="1"
                                       Text="{Binding Text}"
                                       HorizontalAlignment="Stretch"
                                       Width="Auto"
                                       Padding="5"
                                       Cursor="Hand"
                                       Margin="0 0 10 0"
                                       VerticalAlignment="Center">
                                    <TextBlock.InputBindings>
                                        <MouseBinding MouseAction="LeftClick" Command="{Binding ClickCommand}" />
                                    </TextBlock.InputBindings>
                                </TextBlock>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.Resources>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <ContentPresenter />
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.Resources>
                </ListBox>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
